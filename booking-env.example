# Cal.com Booking System Environment Variables
# Copy this file to .env and fill in your values

# Database
POSTGRES_PASSWORD=your-secure-postgres-password

# Authentication (generate random strings)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-minimum-32-chars
CALENDSO_ENCRYPTION_KEY=your-32-character-encryption-key

# Stripe API Keys (from stripe.com dashboard)
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for booking confirmations)
EMAIL_FROM=bookings@theshoeinn.co.uk
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-specific-password

# Public URL (update for production)
NEXT_PUBLIC_WEBAPP_URL=https://booking.theshoeinn.co.uk

